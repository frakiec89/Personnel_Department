<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="SecondColor" >
        <SolidColorBrush.Color>
            <Color A="225" R="225"   G="228" B="255"/>
        </SolidColorBrush.Color>
    </SolidColorBrush>
    <SolidColorBrush x:Key="Ac" >
        <SolidColorBrush.Color>
            <Color A="225" R="255" G="74" B="109"/>
        </SolidColorBrush.Color>
    </SolidColorBrush>

    <Style TargetType="ListBox">
        <Setter Property="FontSize" Value="30"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="Background" Value="White"/>
    </Style>

    <Style TargetType="Border">
        <Setter Property="BorderBrush" Value="{StaticResource Ac}"/>
    </Style>
    <Style TargetType="Window" x:Key="MyWin">
        <Setter Property="Background" Value="White"/>
        <Setter Property="FontFamily" Value="Tahoma"/>
    </Style>
</ResourceDictionary>