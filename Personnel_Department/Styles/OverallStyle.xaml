<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="SecondColor" >
        <SolidColorBrush.Color>
            <Color A="225" R="225"   G="228" B="255"/>
        </SolidColorBrush.Color>
    </SolidColorBrush>
    <SolidColorBrush x:Key="Ac" >
        <SolidColorBrush.Color>
            <Color A="225" R="255" G="74" B="109"/>
        </SolidColorBrush.Color>
    </SolidColorBrush>

    <Style TargetType="ListBox">
        <Setter Property="FontSize" Value="30"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="Background" Value="White"/>
        <Setter Property="ToolTip"  Value="помощь" ></Setter>
    </Style>

    <Style TargetType="Border">
        <Setter Property="BorderBrush" Value="{StaticResource Ac}"/>
    </Style>
    <Style TargetType="Window">
        <Setter Property="Background" Value="White"/>
        <Setter Property="FontFamily" Value="Tahoma"/>
        
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="MinWidth" Value="110"/>
        <Setter Property="Background" Value="AliceBlue"/>
        <Setter Property="Margin" Value="5,5,5,5"/>
    </Style>
    
        
   
    
</ResourceDictionary>